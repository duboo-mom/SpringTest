<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.duboomom.spring.test.jsp.dao.SellerDAO">

	<insert id="insertSeller" parameterType="map">
		INSERT INTO
			`seller`
		(
			`nickname`
			, `profileImage`
			, `temperature`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{nickname}
			, #{profileImage}
			, #{temperature}
			, now()
			, now()
		)
	</insert>

	<select id="selectLastSeller" resultType="com.duboomom.spring.test.jsp.model.Seller">
		SELECT
			`id`
			, `nickname`
			, `profileImage`
			, `temperature`
			, `createdAt`
			, `updatedAt`
		FROM
			`seller`
		ORDER BY
			`id` DESC
		LIMIT 1
	</select>
	
	<select id="selectSellerById" resultType="com.duboomom.spring.test.jsp.model.Seller"
	parameterType="int">
		SELECT
			`id`
			, `nickname`
			, `profileImage`
			, `temperature`
			, `createdAt`
			, `updatedAt`
		FROM
			`seller`
		WHERE
			`id` = #{id}	
	</select>


</mapper>