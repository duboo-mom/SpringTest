<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.duboomom.spring.test.ajax.dao.BookmarkDAO">
	
	<select id="selectBookmark" resultType="com.duboomom.spring.test.ajax.model.Bookmark">
		SELECT
			`id`
			, `name`
			, `url`
			, `createdAt`
			, `updatedAt`
		FROM
			`bookmark`
		ORDER BY `id` DESC 
	</select>
	
	<insert id="insertBookmark" parameterType="map">
		INSERT INTO
			`bookmark`
		(
			`name`
			, `url`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{name}
			, #{url}
			, now()
			, now()
		)
	</insert>
	
	<select id="selectCountUrl" resultType="int" parameterType="string">
		SELECT
			count(1)
		FROM
			`bookmark`
		WHERE
			`url` = #{url}
	</select>
	
	<delete id="deleteBookmark" parameterType="int">
		DELETE FROM
			`bookmark`
		WHERE
			`id` = #{id}
	</delete>

</mapper>